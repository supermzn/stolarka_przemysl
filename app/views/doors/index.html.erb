<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>

<h1>Oto nasze drzwi</h1>
<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
handler.buildMap({
    provider: {},
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);
</script>

<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation"><a href="#map" aria-controls="map" role="tab" data-toggle="tab">Mapa</a></li>
    <li role="presentation" class="active"><a href="#list" aria-controls="list" role="tab" data-toggle="tab">Lista</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane" id="map">
    	<iframe src="https://www.google.com/maps/d/embed?mid=zb8DVjirvEGg.kpdyf6j9LK5A" width=100% height="480"></iframe>
    </div>
    <div role="tabpanel" class="tab-pane active" id="list">
			<% @door.each do |d| %>
				<div class="well well-sm">
			 	<u><%= link_to d.title, door_path(d) %></u>
		 	</div>
		 <% end %> 
    </div>
  </div>

</div>




