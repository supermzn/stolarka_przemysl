<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>






<div id="door_description">
	<div class="row">
		<div class="col-md-6">
			<h1><%= @door.title %></h1>
			<h3><%= @door.address %></h3>
			<h4><b>Współrzędne: </b>Long: <%= @door.longitude %> Lat: <%= @door.latitude %></h4>
		</div>
		<div class="col-md-6">
			<%= image_tag "doors/#{@door.image}", size: "300x300" %>
		</div>
	</div>
	<br/>
	<div class="row well">
		<div class="col-md-7">
			<p><%= @door.description %></br></p>
		</div>
		<div class="col-md-5">
<!-- 			<div style='width: 100%;'> -->
			  <div id="map" style='width: 100%; height: 400px;'></div>
			<!-- </div> -->
		</div>
	</div>
</div>

<script type="text/javascript">
	handler = Gmaps.build('Google');
	handler.buildMap({
    provider: {},
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(19);
  }
);
</script>

<div>
	<% if current_user %>
		 <%= link_to " Edytuj", edit_door_path(@door), id: "edit_door", remote: :true, class: "glyphicon glyphicon-edit text-warning" %><br/>
		 <%= link_to " Usuń", door_path(@door), method: :delete, data: { confirm: "Czy na pewno chcesz usunąć?" }, class: "glyphicon glyphicon-remove text-danger" %><br/>
	<% end %>
	<br/><%= link_to " Powrót", doors_path, class: "glyphicon glyphicon-arrow-left" %><br/>
</div>



 

