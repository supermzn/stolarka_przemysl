<div class="row">
	<div class="col-md-6 col-md-offset-3 form">
			<%= form_for @door do |f| %>
				<%= f.label :zdjęcie %><br/>
			  <%= f.text_field :image, placeholder: "http://" %><br/>
			  <%= f.label :tytuł %><br/>
			  <%= f.text_field :title %><br/>
			  <%= f.label :adres %><br/>
			  <%= f.text_field :address, placeholder: "Ogrodowa 7, Przemyśl" %><br/>
			  <%= f.label :opis %><br/>
			  <%= f.text_area :description, height: "50" %><br/>
			  <%= f.submit "Zapisz", class: "btn btn-default submit" %>
			<% end %>
	</div>
</div>