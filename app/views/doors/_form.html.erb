
<div class="row">
	<div class="col-md-6 col-md-offset-3 form">
		<% if current_page?(controller: 'doors', action: 'new') then %>
			<%= form_for @door do |f| %>
				<%= f.label :zdjęcie %><br/>
			  <%= f.text_field :image %><br/>
			  <%= f.label :tytuł %><br/>
			  <%= f.text_field :title %><br/>
			  <%= f.label :adres %><br/>
			  <%= f.text_field :address, placeholder: "Ogrodowa 7, Przemyśl" %><br/>
			  <%= f.label :opis %><br/>
			  <%= f.text_area :description, height: "50" %><br/>
			  <%= f.submit "Zapisz", class: "btn btn-default submit" %>
			<% end %>
		<% else %>
				<%= form_for @door, remote: :true do |f| %>
				<%= f.label :zdjęcie %><br/>
			  <%= f.text_field :image %><br/>
			  <%= f.label :tytuł %><br/>
			  <%= f.text_field :title %><br/>
			  <%= f.label :adres %><br/>
			  <%= f.text_field :address, placeholder: "Ogrodowa 7, Przemyśl" %><br/>
			  <%= f.label :opis %><br/>
			  <%= f.text_area :description, height: "50" %><br/>
			  <%= f.submit "Zapisz", class: "btn btn-default submit" %>
			<% end %>
		<% end %>
	</div>
</div>